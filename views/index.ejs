<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Artist Names</title>
</head>
<body>
    

    <h1>Artist Names Collection</h1>

    <form action="/artists" method="POST">
        <input type="text" placeholder="Artist Name" name="name">
        <input type="text" placeholder="Real Name" name="realName">
        <button type="submit">Add to List</button>
    </form>
    <div>
        <h2>Update Artist!</h2>
        <p>
          Repaces the first artist name and Real Name
        </p>
        <button id="update-button">Replace artist name</button>
    </div>
        
    <div>
        <h2>Remove Dr. Dre</h2>
        <p>
          Remove the Dr. Dre entries from the list
        </p>
        <button id="delete-button">Delete Dr.Dre</button>
        <div id="message"></div>
    </div>

    <h2>Submitted Artist Names</h2>
    <ul class="artistNames">
        <!-- Loop through artistNames -->
        <% for(var i = 0; i < artistNames.length; i++) {%>
          <li class="artName">
            <!-- Output Artist from the iterated quote object -->
            <span><%= artistNames[i].name %></span>:
            <!-- Output Name from the iterated quote object -->
            <span><%= artistNames[i].realName %></span>
          </li>
        <% } %>
      </ul>
        
      <script src="main.js"></script>
</body>
</html>